<div class="brand"> <strong> <%= link_to "MAIL-ME", root_path %> </strong> </div>

 <div class="nav-collapse collapse">
    <ul class="nav">
        <li <%= active(root_path) %> ><%= link_to "Home", root_path %></li>
        <% if current_user %>
            <li <%= active(users_path) %> ><%= link_to "Mail-me users", users_path %></li>
            <li <%= active(user_path(current_user)) %> ><%= link_to user_path(current_user) do %>
            	Inbox <span class="label label-info"><%= no_of_mails(current_user) %></span>
            	<% end %>
            </li>
            <li><%= link_to "Not you? Sign out", signout_path, id: "sign_out" %></li>
        <% else %>
            <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></li>
        <% end %>
    </ul>    
</div>

